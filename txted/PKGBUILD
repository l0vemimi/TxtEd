# Maintainer: Your Name <your.email@example.com>
pkgname=txted
pkgver=1.0.0
pkgrel=1
pkgdesc="Very simple python text editor."
arch=('any')
url="https://github.com/l0vemimi/txted"
license=('GPL')
depends=('python' 'pygments')
makedepends=('git')
source=("git+https://github.com/l0vemimi/txted.git#tag=v$pkgver"
        "txted.desktop"
        "txt.png")
md5sums=('SKIP' 'SKIP' 'SKIP')

package() {
    cd "$srcdir/txted"

    python setup.py install --root="$pkgdir/" --optimize=1

    install -Dm644 "$srcdir/txted.desktop" "$pkgdir/usr/share/applications/txted.desktop"

    install -Dm644 "$srcdir/txted-icon.png" "$pkgdir/usr/share/icons/hicolor/256x256/apps/txted.png"
}
